<h2>Edit Your Kitten</h2>

<% if @kitten.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@kitten.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @kitten.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@kitten, url: kitten_path(@kitten), method: :patch do |form| %>
	<p>
	<%= form.label :name %><br>	
	<%= form.text_field :name %>
	</p>

	<p><%= form.label :age %><br>
	<%= form.text_field :age %></p>

	<p><%= form.label :cuteness %><br>
	<%= form.text_field :cuteness,\
	 placeholder: "On a scale of 10" %></p>

	<p><%= form.label :softness %><br>
	<%= form.text_field :softness,\
	 placeholder: "On a scale of 10" %></p>

	<p><%= form.submit "Update" %></p>
<% end %>
